<!--room.wxml-->
<navigation-bar title="房间" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<view class="page-container">
  <!-- 成员列表组件 -->
  <member-list
    members="{{members}}"
    room-code="{{roomCode}}"
    bind:membertap="onMemberTap"
  ></member-list>

  <!-- 房间日志组件 -->
  <room-log activities="{{activities}}"></room-log>

  <!-- 操作按钮组件 -->
  <room-actions
    is-owner="{{isOwner}}"
    room-code="{{roomCode}}"
    user-id="{{userId}}"
    bind:leaveroom="onLeaveRoomSuccess"
    bind:closeroom="onCloseRoomSuccess"
  ></room-actions>

  <!-- 转账对话框组件 -->
  <transaction-dialog
    visible="{{showTransactionDialog}}"
    target-member="{{targetMember}}"
    bind:confirm="onTransactionConfirm"
    bind:cancel="onTransactionCancel"
  ></transaction-dialog>
</view>

